<h1>Restaurants</h1>
<%= link_to 'Add a restaurant', new_restaurant_path, class: 'btn btn-primary mb-4' %>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
  <% @restaurants.each do |restaurant| %>
    <div class="col">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= restaurant.name %></h5>
          <p class="card-text">
            <strong>Category:</strong> <%= restaurant.category.capitalize %><br>
            <strong>Address:</strong> <%= restaurant.address %><br>
            <strong>Phone number:</strong> <%= restaurant.phone_number %>
          </p>
          <%= link_to 'View Details', restaurant_path(restaurant), class: 'btn btn-outline-primary btn-sm' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
